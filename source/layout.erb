<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1.0">
    <meta name="author" content="Sam Symons">
    <meta name="description" content="Hi, I'm Sam! I'm an iOS developer from New Zealand.">

    <title><%= page_title %></title>

    <script type"text/javascript" src="https://code.jquery.com/jquery-2.1.4.min.js"></script>

    <%= stylesheet_link_tag 'all' %>
    <%= javascript_include_tag 'highlight.min', 'bigfoot.min' %>

    <script>hljs.initHighlightingOnLoad();</script>

    <script type="text/javascript">
      $.bigfoot({
        actionOriginalFN: "ignore"
      });
    </script>
  </head>
  <body>
    <header id="main-header">
      <div class="content">
        <h1 id="main-title"><%= link_to "Sam Symons", '/' %></h1>

        <nav id="main-navigation">
          <ul id="site-links">
            <li><%= navigation_link_to 'Articles', '/' %></li>
            <li><%= navigation_link_to 'Archive', '/archive/' %></li>
            <li><%= navigation_link_to 'Projects', '/projects/' %></li>
          </ul>
        </nav>
      </div>
    </header>

    <div class="content">
      <div id="inner-content">
        <%= yield %>

        <footer>
          <p id="footer-details">&copy; <%= Time.now.year %> Sam Symons. <a href="https://github.com/samsymons">GitHub</a> &bull; <a href="https://twitter.com/sam_symons">Twitter</a> &bull; <a href="https://keybase.io/samsymons">Keybase</a>.</p>
        </footer>
      </div>
    </div>

    <% unless development? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-32354592-1', 'auto');
      ga('send', 'pageview');

      </script>
    <% end %>
  </body>
</html>
